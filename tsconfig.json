{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "allowJs": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "outDir": "./dist",
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost",
      "esnext.asynciterable"
    ],
    "paths": {
      "~/*": ["./*"],
      "@/*": ["lib/*"]
    }
  },
  "types": [
    "@types/node",
    "@types/geojson",
    "@types/mapbox__mapbox-gl-draw",
    "vitest/globals"
  ],
  "include": ["lib/**/*.ts", "./shims/**/*.d.ts"],
  "exclude": ["dist", "node_modules"]
}
